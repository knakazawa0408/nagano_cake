<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="border-bottom border-dark" style="height: 100px">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <%= link_to root_path do %>
            <h1 class="headline">NaganoCake</h1>
          <% end %>
          <% if customer_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "マイページ", public_customer_path(current_customer.id), class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '商品一覧', public_items_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to 'カート', root_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-outline-dark' %>
            </li>
            </ul>
          </div>
          <% elsif admin_signed_in? %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '会員一覧', admin_customers_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '注文履歴一覧', root_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-outline-dark' %>
            </li>
            </ul>
          </div>
          <% else %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "About", about_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '商品一覧', root_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '新規登録', new_customer_registration_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path, class: 'btn btn-outline-dark' %>
            </li>
            </ul>
          </div>
          <% end %>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="border-top border-dark" style="height: 100px">
    </footer>
  </body>
</html>
