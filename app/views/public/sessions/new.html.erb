<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h3 class="bg-light">ログイン</h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="offset-2">
      <h6 class="bg-light">会員の方はこちらからログイン</h6>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row my-4">
        <div class="offset-3 col-2">
          <%= f.label :email, "メールアドレス"%>
        </div>
        <div class="col-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
        </div>
    </div>

    <div class="row">
        <div class="offset-3 col-2">
          <%= f.label :password, "パスワード" %>
        </div>
        <div class="col-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
    </div>
    <div class="row my-5">
      <div class="offset-5 col-2">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
<% end %>

  <div class="row">
    <div class="offset-2">
      <h6 class="bg-light">会員登録がお済みでない方</h6>
    </div>
  </div>
  <div class="row">
    <div class="offset-3">
    　<%= link_to "こちら", new_customer_registration_path %>
    から新規登録を行なってください。
    </div>
  </div>
</div>
