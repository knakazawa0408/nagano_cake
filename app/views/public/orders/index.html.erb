<div class="container">
  <div class="row my-5">
    <h3 class="offset-1 bg-light">注文履歴一覧</h3>
  </div>
  <div class="row">
    <table class=table>
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.shipping_address %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>/
            <% end %>
          </td>
          <td><%= order.billing_amount %></td>
          <td><%= order.status %></td>
          <td><%= link_to "注文詳細", public_order_path(order) %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>