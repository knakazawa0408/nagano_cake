<div class="container">
  <div class="row my-5">
    <h3 class="offset-1 bg-light">注文履歴詳細</h3>
  </div>
  <div class="row">
    <div class="col-7">
      <p>注文情報</p>
      <table class="table">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.shipping_postal_code %><br><%= @order.shipping_address %><br><%= @order.shipping_name%></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment %></td>
        </tr>
      </table>
    </div>
    <% @order_detail.each do |order_detail| %>
    <% @total += (order_detail.item.price*order_detail.amount) %>
    <div class="col-5">
      <p>請求情報</p>
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= @total %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th>ご請求金額</th>
          <td><%= @order.billing_amount + 800 %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <table class="table">
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>

        <tr>
          <td><%= order_detail.item.name %></td>
				  <td><%= order_detail.item.price %></td>
				  <td><%= order_detail.amount %></td>
				  <td>
				    <%= (order_detail.item.price*order_detail.amount) %>

				  </td>
				</tr>
				<% end %>
      </table>
    </div>
  </div>
</div>