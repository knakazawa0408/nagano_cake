<div class="container">
  <div class="row mt-5 mb-3">
    <div class="offset-1">
      <h3 class="bg-light">マイページ</h3>
    </div>
  </div>
  <div class="row mb-3">
    <h3 class="col-2">登録情報</h3>
    <div>
      <%= link_to "編集する", root_path, class: "btn btn-success text-right"%>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name + " " + @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana + " " + @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="row mt-3">
    <h3 class="col-2">配送先</h3>
    <div>
      <%= link_to "一覧を見る", root_path, class: "btn btn-primary text-right"%>
    </div>
  </div>
  <div class="row mt-3">
    <h3 class="col-2">注文履歴</h3>
    <div>
      <%= link_to "一覧を見る", root_path, class: "btn btn-primary text-right"%>
    </div>
  </div>
</div>