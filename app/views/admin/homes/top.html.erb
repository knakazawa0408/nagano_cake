<div class="container">
  <div class="row mt-5 mb-3">
    <h3 class="offset-1 bg-light">注文履歴一覧</h3>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.created_at %></td>
          <td><%= order_detail.order.customer.last_name %></td>
          <td><%= order_detail.amount %></td>
          <td></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>