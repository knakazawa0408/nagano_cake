<main>
  <div class="container">
    <div class="row">
      <div class="offset-2">
        <h3>ジャンル編集</h3>
      </div>
    </div>
    <%= form_with model: @genre, url: edit_admin_genre_path do |f| %>
    <div class="row my-5">
      <div class="col-2">
          <%= f.label :name, "ジャンル名"%>
        </div>
        <div class="col-3">
          <%= f.text_field :name %>
        </div>
        <div class="col-2">
          <%= f.submit "変更を保存", class: "btn btn-success btn-block" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</main>