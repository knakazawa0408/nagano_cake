
  <div class="container my-5">
    <div class="row">
      <div class="offset-1">
        <h3 class="bg-light">ジャンル編集</h3>
      </div>
    </div>
    <%= form_with model: @genre, url: admin_genre_path do |f| %>
    <div class="row my-5">
      <div class="col-2 font-weight-bold">
          <label>ジャンル名</label>
        </div>
        <div class="col-3">
          <%= f.text_field :name %>
        </div>
        <div class="col-2">
          <%= f.submit "変更を保存", class: "btn btn-success btn-block" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
