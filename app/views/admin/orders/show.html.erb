<div class="contaner">
  <div class="row my-5">
    <h3 class="offset-1 bg-light">注文履歴詳細</h3>
  </div>
  <div class="col-7">
  <table class="table">
    <tbody>
      <tr>
        <th>購入者</th>
        <td>
          <%= link_to admin_customer_path(@order.customer) do %>
            <%= @order.customer.last_name %>
            <%= @order.customer.first_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.shipping_address %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td></td>
      </tr>
    </tbody>
  </table>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
        <td><%= order_detail.item.name %></td>
        <td><%= (order_detail.total_price).floor.to_s(:delimited, delimiter: ',') %></td>
        <td><%= order_detail.amount %></td>
        <td><%= (order_detail.total_price * order_detail.amount).floor.to_s(:delimited, delimiter: ',') %></td>
        <td>
          <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
            <%= f.select :making_status, options_from_collection_for_select(OrderDetail.all, :id, :making_status) %>
            <%= f.submit '更新',class:"btn btn-success" %>
          <% end %>
        </td>
      <% end %>
    </tbody>
  </table>

  <table class="table">
    <tbody>
      <tr>
        <th>商品合計</th>
        <tr><%= (@order.billing_amount - @order.postage).to_s(:delimited, delimiter: ',') %>円</tr>
      </tr>
      <tr>
        <th>送料</th>
        <tr><%= @order.postage.to_s(:delimited, delimiter: ',') %></tr>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td><%= @order.billing_amount.to_s(:delimited, delimiter: ',') %></td>
      </tr>
    </tbody>
  </table>

</div>