
  <div class="container my-5">
    <div class="row">
      <div class="offset-1">
        <h3 class="bg-light">管理者ログイン</h3>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row my-4">
        <div class="offset-3 col-2">
          <%= f.label :email, "メールアドレス"%>
        </div>
        <div class="col-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
        </div>
    </div>

    <div class="row">
        <div class="offset-3 col-2">
          <%= f.label :password, "パスワード" %>
        </div>
        <div class="col-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
    </div>
    <div class="row my-5">
      <div class="offset-5 col-2">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
    <% end %>

    <%= render "admin/shared/links" %>
  </div>
