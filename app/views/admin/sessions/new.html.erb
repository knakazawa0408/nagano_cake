<header>
  <nav class="navbar navbar-expand-lg nav-light border-bottom">
    <div class="container">
      <%= link_to "NaganoCakes", root_path, class: "navbar-brand navbar-dark" %>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <li>
            <%= link_to "About", about_path, class: "btn btn-outline-dark"%>
          </li>
          <li>
            <%= link_to "商品一覧", about_path, class: "btn btn-outline-dark"%>
          </li>
          <li>
            <%= link_to "新規登録", about_path, class: "btn btn-outline-dark"%>
          </li>
          <li>
            <%= link_to "ログイン", about_path, class: "btn btn-outline-dark"%>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
<main>
  <div class="container my-5">
    <div class="row">
      <div class="offset-2">
        <h3 class="bg-light">管理者ログイン</h3>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row my-4">
        <div class="offset-3 col-2">
          <%= f.label :email, "メールアドレス"%>
        </div>
        <div class="col-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
    </div>

    <div class="row">
        <div class="offset-3 col-2">
          <%= f.label :password, "パスワード" %>
        </div>
        <div class="col-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
    </div>
    <div class="row my-5">
      <div class="offset-5 col-2">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
    <% end %>

    <%= render "admin/shared/links" %>
      </div>
  </div>
</main>
