<div class="container">
    <div class="row my-5">
    <%= form_with model: @item, url: new_admin_item_path do |f| %>
        <h3>商品新規登録</h3>
    </div>
    <div class="row justify-content-center">
        <table class="new-form-table">
          <tbody>
            <tr>
              <th><%= f.label :image, "商品画像"%></th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>

            <tr>
              <th><%= f.label :introduction, "商品説明" %></th>
              <td><%= f.text_area :intoroduction, class: "form-control" %></td>
            </tr>

            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>

            <tr>
              <th>税抜価格</th>
              <td>  <%= f.text_field :price_without_tax, class: "form-control" %></td>
            </tr>

            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :is_sales_status, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %></td>
            </tr>
          </tbody>
        </table>
    </div>
    <div class="row justify-content-center my-5">
      <%= f.submit "新規登録" ,class: "btn btn-success text-right" %>
    </div>
    <% end %>
</div>