<div class="container">
    <div class="row my-5">
      <h3 class="bg-light">商品新規登録</h3>
    </div>
    <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="row">
        <table class="offset-2 form-table">
          <tbody>
            <tr>
              <th width="200" height="50">商品画像</th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <th height="50">商品名</th>
              <td><%= f.text_field :name, class: "form-control", placeholder: "商品名" %></td>
            </tr>

            <tr>
              <th height="50">商品説明</th>
              <td><%= f.text_area :introduction, class: "form-control", style: "height:150px",  placeholder: "ここに説明文を記述します" %></td>
            </tr>

            <tr>
              <th height="50">ジャンル</th>
              <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>

            <tr>
              <th height="50">税抜価格</th>
              <td><%= f.text_field :price, class: "form-control", placeholder: "1000" %></td>
              <td>円</td>
            </tr>

            <tr>
              <th height="50">販売ステータス</th>
              <td>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "販売中", {style: "display: inline-block;"} %>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "販売停止中", {style: "display: inline-block;"} %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
    <div class="row mb-5">
      <div class="offset-4 col-2">
      <%= f.submit "新規登録" ,class: "btn btn-success btn-lg text-right" %>
      </div>
    </div>
    <% end %>
</div>