<div class="container">
  <div class="row my-5">
    <div class="offset-1">
      <h3 class="bg-light">商品一覧</h3>
    </div>
    <div class="offset-9">
      <%= link_to new_admin_item_path, class: 'btn btn-outline-dark rounded-circle p-1', style: "width:3rem;height:3rem;" do %>
        <h3>+</h3>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="table border-dark">
      <thead class="bg-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name ,admin_item_path(item) %></td>
            <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == false %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>