<div class="container">
  <div class="row mt-5">
     <h3 class="offset-1 bg-light"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h3>
  </div>
  <div class="row">
    <table class="offset-1">
      <tr>
        <th width="200" height="50">会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th height="50">氏名</th>
        <td><%= @customer.last_name + " " + @customer.first_name %></td>
      </tr>
      <tr>
        <th height="50">フリガナ</th>
        <td><%= @customer.last_name_kana + " " + @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th height="50">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th height="50">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th height="50">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th height="50">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th height="50">会員ステータス</th>
        <td>
          <% if @customer.is_deleted == false %>
            <span class="label label-primary">
              有効
            </span>
          <% else %>
            <span class="label label-danger">
              退会
            </span>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <%= link_to "編集する", edit_admin_customer_path(@customer), class: "offset-3 mr-5 btn btn-success text-right" %>
  <%= link_to "注文履歴を見る", edit_admin_customer_path(@customer), class: "btn btn-primary text-right" %>
</div>